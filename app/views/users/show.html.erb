<div class="booyah-box">
  <div class="row">
    <div class="col-8">
      <%= image_tag 'user.png' %>
      <h1><%= @user.email %></h1>
    </div>

    <div class="col-4">
      <h3>Member since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>

      <h4><%= @user.comments.count %> total comments</h4>
      <h5><%= @user.comments.where(rating: '5_stars').count %> Five star ratings</h5>
      <h5><%= @user.comments.where(rating: '4_stars').count %> Four star ratings</h5>
      <h5><%= @user.comments.where(rating: '3_stars').count %> Three star ratings</h5>
      <h5><%= @user.comments.where(rating: '2_stars').count %> Two star ratings</h5>
      <h5><%= @user.comments.where(rating: '1_star').count %> One star ratings</h5>
    </div>
  </div>
  <div class="clear"></div>
</div>

<br /><br />

<h1 class="text-center">My Comments</h1>
<br /><br />

<div class="row">
  <% @user.comments.each do |comment| %>
    <div class="col-12 col-sm-6">
      <h2 class="text-center"><%= link_to comment.place.name, place_path(comment.place) %></h2>
      <blockquote>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b> -
        <% end %>
        <%= comment.message %>
      </blockquote>
    </div>
  <% end %>
</div>


